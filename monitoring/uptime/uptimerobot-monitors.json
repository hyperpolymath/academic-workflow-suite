{
  "monitors": [
    {
      "friendly_name": "Backend API",
      "url": "${BACKEND_URL}/health",
      "type": 1,
      "sub_type": 1,
      "interval": 300,
      "timeout": 30,
      "http_method": 1,
      "http_username": "",
      "http_password": "",
      "http_auth_type": 0,
      "keyword_type": 2,
      "keyword_value": "healthy",
      "alert_contacts": "email,sms,webhook",
      "custom_http_headers": {
        "User-Agent": "UptimeRobot/1.0"
      },
      "custom_http_statuses": "200",
      "ignore_ssl_errors": false,
      "status": 1
    },
    {
      "friendly_name": "Backend API - SSL",
      "url": "${BACKEND_URL}",
      "type": 1,
      "sub_type": 1,
      "interval": 300,
      "timeout": 30,
      "http_method": 1,
      "ssl_expiry_reminder": 30,
      "ssl_expiry_contacts": "email",
      "ignore_ssl_errors": false,
      "status": 1
    },
    {
      "friendly_name": "AI Jail Service",
      "url": "${AI_JAIL_URL}/health",
      "type": 1,
      "sub_type": 1,
      "interval": 300,
      "timeout": 30,
      "http_method": 1,
      "keyword_type": 2,
      "keyword_value": "healthy",
      "alert_contacts": "email,sms,webhook",
      "custom_http_statuses": "200",
      "ignore_ssl_errors": false,
      "status": 1
    },
    {
      "friendly_name": "Grafana Dashboard",
      "url": "${GRAFANA_URL}/api/health",
      "type": 1,
      "sub_type": 1,
      "interval": 600,
      "timeout": 30,
      "http_method": 1,
      "keyword_type": 2,
      "keyword_value": "ok",
      "alert_contacts": "email",
      "custom_http_statuses": "200",
      "ignore_ssl_errors": false,
      "status": 1
    },
    {
      "friendly_name": "Prometheus",
      "url": "${PROMETHEUS_URL}/-/healthy",
      "type": 1,
      "sub_type": 1,
      "interval": 600,
      "timeout": 30,
      "http_method": 1,
      "alert_contacts": "email",
      "custom_http_statuses": "200",
      "ignore_ssl_errors": false,
      "status": 1
    },
    {
      "friendly_name": "PostgreSQL Port",
      "url": "${POSTGRES_HOST}",
      "type": 3,
      "sub_type": "",
      "port": "${POSTGRES_PORT}",
      "interval": 300,
      "timeout": 30,
      "alert_contacts": "email,sms,webhook",
      "status": 1
    },
    {
      "friendly_name": "Backend Response Time",
      "url": "${BACKEND_URL}/health",
      "type": 1,
      "sub_type": 1,
      "interval": 300,
      "timeout": 30,
      "http_method": 1,
      "response_time_threshold": 2000,
      "alert_contacts": "email",
      "custom_http_statuses": "200",
      "ignore_ssl_errors": false,
      "status": 1
    },
    {
      "friendly_name": "Domain DNS",
      "url": "${DOMAIN}",
      "type": 2,
      "sub_type": "",
      "interval": 3600,
      "timeout": 30,
      "alert_contacts": "email",
      "status": 1
    }
  ],
  "alert_contacts": [
    {
      "friendly_name": "Operations Email",
      "type": 2,
      "value": "ops@academic-workflow-suite.com",
      "status": 2
    },
    {
      "friendly_name": "SMS Alerts",
      "type": 3,
      "value": "${ALERT_PHONE_NUMBER}",
      "status": 2
    },
    {
      "friendly_name": "Slack Webhook",
      "type": 11,
      "value": "${SLACK_WEBHOOK_URL}",
      "status": 2
    },
    {
      "friendly_name": "PagerDuty",
      "type": 9,
      "value": "${PAGERDUTY_INTEGRATION_KEY}",
      "status": 2
    },
    {
      "friendly_name": "Discord Webhook",
      "type": 13,
      "value": "${DISCORD_WEBHOOK_URL}",
      "status": 1
    }
  ],
  "mwindows": [
    {
      "friendly_name": "Scheduled Maintenance",
      "type": 1,
      "start_time": "2025-12-01 02:00:00",
      "duration": 120,
      "value": "0,1,2,3,4,5,6,7",
      "status": 1
    }
  ],
  "psp": [
    {
      "friendly_name": "AWS Status Page",
      "monitors": "0-1-2-3-4-5-6-7",
      "sort": 1,
      "hide_url_links": 0,
      "custom_domain": "status.academic-workflow-suite.com",
      "password": "",
      "status": 1
    }
  ],
  "settings": {
    "timezone": "UTC",
    "default_interval": 300,
    "default_timeout": 30,
    "email_notifications": true,
    "sms_notifications": true,
    "webhook_notifications": true
  }
}
